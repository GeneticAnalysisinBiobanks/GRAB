#-I ../thirdParty/cget/include \
#-I ../thirdParty/cget/lib \
-D SQLITE_ENABLE_COLUMN_METADATA -O3 -fpic -Wall -Wextra -pedantic  -DARMA_64BIT_WORD=1


CXX_STD = CXX11

